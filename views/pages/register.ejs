      <div class="container">
        <div class="title">Registration</div>
        <div class="content">
          <form id="msform" action="/add/registered/user" method="post">
            <div class="user-details">
              <div class="input-box">
                <span class="details">Name</span>
                <input type="text" placeholder="Enter your name" name="userName" value="<%= userDetailsNew.name %>"  required>
              </div>
              <div class="input-box">
                <span class="details">Email</span>
                <input type="text" placeholder="Enter your email" name="email" value="<%= userDetailsNew.email %>"  required>
              </div>
              <div class="input-box">
                <span class="details">Profile Photo URL</span>
                <input type="text" placeholder="Enter your profile photo url" name="pictureURL" value="<%= userDetailsNew.profileURL%>"  required>
              </div>
              <div class="input-box">
                <span class="details">Branch</span>
                <input type="text" placeholder="Enter your branch" name="branch" required>
              </div>
              <div class="input-box">
                <span class="details">Year</span>
                <input type="text" placeholder="Enter your year" name="year" required>
              </div>
              
              <div class="input-box">
                <span class="details">Student Number</span>
                <input type="text" placeholder="Enter your student number" name="student_number" required>
              </div>
              <div class="input-box">
                <span class="details">Roll Number</span>
                <input type="text" placeholder="Enter your roll number" name="roll_number" required>
              </div>
              <div class="input-box">
                <span class="details">Proceed for payment of Rs.500</span>
                <input type="checkbox" class="details" name="checkPaymentBox">
              </div>
              <button class="btn" href=".source/views/pages/payment">
                <span>Make Payment</span></button>
              <button class="btn" type="submit" >
                <span>Submit Now</span>
              </button>
                 
                </div>
              </div>
            </div>
               
          </form>
        </div>
      </div>
  
    </div>
